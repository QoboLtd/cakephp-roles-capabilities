{
    "name": "qobo/cakephp-roles-capabilities",
    "description": "Roles and Capabilities plugin for CakePHP",
    "keywords": ["cakephp", "roles", "acl", "security"],
    "type": "cakephp-plugin",
    "license": "MIT",
    "homepage": "https://www.qobo.biz",
    "authors": [
        {
            "name": "Qobo Ltd",
            "email": "support@qobo.biz",
            "homepage": "https://www.qobo.biz",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/QoboLtd/cakephp-roles-capabilities/issues",
        "source": "https://github.com/QoboLtd/cakephp-roles-capabilities"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/QoboLtd/cakephp-utils.git"
        },
        {
            "type": "git",
            "url": "https://github.com/QoboLtd/cakephp-groups.git"
        }
    ],
    "require": {
        "qobo/cakephp-utils": "dev-cakephp-v38a",
        "qobo/cakephp-groups": "dev-cakephp-v38"
    },
    "require-dev": {
        "qobo/cakephp-composer-dev": "^v1.0"
    },
    "autoload": {
        "psr-4": {
            "RolesCapabilities\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RolesCapabilities\\Test\\": "tests/",
            "Groups\\Test\\": "vendor/qobo/cakephp-groups/tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "scripts": {
        "test": [
            "phpcs",
            "phpunit --no-coverage"
        ],
        "test-coverage": [
            "phpcs",
            "phpunit"
        ],
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump"
    },
    "scripts-descriptions": {
        "test": "Runs phpcs and phpunit without coverage",
        "test-coverage": "Runs phpcs and phpunit with coverage enabled"
    },
    "prefer-stable": true
}
